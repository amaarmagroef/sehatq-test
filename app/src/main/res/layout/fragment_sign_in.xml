<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="4dp"
        app:cardElevation="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/abc_title_login"
                android:text="LOGIN"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginTop="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:hint="Username"
                android:background="@drawable/abc_background_edittext"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:id="@+id/abc_edit_text_username"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/abc_title_login"
                android:layout_width="match_parent"
                android:layout_height="48dp"/>
            <EditText
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:background="@drawable/abc_background_edittext"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:id="@+id/abc_edit_text_password"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/abc_edit_text_username"
                android:layout_width="match_parent"
                android:layout_height="48dp"/>
            <Button
                android:id="@+id/abc_action_sign_in"
                android:textAllCaps="false"
                android:text="Sign In"
                android:textColor="@android:color/white"
                android:background="@drawable/abc_background_button_sign_in"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="@id/abc_edit_text_password"
                app:layout_constraintTop_toBottomOf="@id/abc_edit_text_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <CheckBox
                android:checked="true"
                android:paddingStart="8dp"
                android:paddingEnd="0dp"
                android:text="Remember Me"
                app:layout_constraintTop_toTopOf="@id/abc_action_sign_in"
                app:layout_constraintBottom_toBottomOf="@id/abc_action_sign_in"
                app:layout_constraintStart_toStartOf="@id/abc_edit_text_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/abc_action_facebooks"
                android:layout_marginTop="48dp"
                app:layout_constraintTop_toBottomOf="@id/abc_action_sign_in"
                app:cardBackgroundColor="#4267B2"
                android:layout_marginStart="64dp"
                android:layout_marginEnd="64dp"
                android:layout_width="260dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_height="48dp">
                <com.facebook.login.widget.LoginButton
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:id="@+id/abc_action_facebook"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_marginBottom="24dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/abc_action_google"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@id/abc_action_facebooks"
                app:cardBackgroundColor="#4285F4"
                android:layout_marginStart="64dp"
                android:layout_marginEnd="64dp"
                android:layout_width="260dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_height="48dp">
                <TextView
                    android:drawablePadding="16dp"
                    android:drawableStart="@drawable/google"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:text="Sign In with Google"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>